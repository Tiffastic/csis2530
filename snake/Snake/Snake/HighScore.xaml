<Window x:Class="Snake.HighScore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HighScore" Height="450" Width="530">
    
    <Window.Resources>
        <Style x:Key="ContentTbStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10" />
            <Setter Property="Background" Value="#99CC66" />
            <Setter Property="FontFamily" Value="Courier New" />
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style TargetType="Canvas" >
            <Setter Property="Background" Value="LightGray" />
        </Style>
    </Window.Resources>
    <Canvas>
        <Image Source="Images/snakeclip.jpg" Width="525" Height="410"></Image>
        <TextBox Name="ContentTb"  Canvas.Bottom="85" Canvas.Left="125" Width="300" Height="250" Style="{StaticResource ContentTbStyle}" />
    </Canvas>
</Window>
